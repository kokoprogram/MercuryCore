{
	"name": "mercurycore",
	"scripts": {
		"dev": "bun x -b vite dev",
		"build": "bun x -b vite build",
		"format": "biome format src --write",
		"lint": "biome lint src",
		"prod": "bun i -p && bun x -b vite build",
		"preview": "bun x -b vite preview",
		"buildview": "bun x -b vite build && bun x -b vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/bun": "^1.2.23",
		"@types/d3-interpolate": "^3.0.4",
		"@types/nprogress": "^0.2.3",
		"@types/serviceworker": "^0.0.158",
		"svelte-check": "^4.3.2"
	},
	"type": "module",
	"dependencies": {
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.86.6",
		"@sveltejs/adapter-node": "^5.3.2",
		"@sveltejs/kit": "^2.43.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@unocss/core": "^66.5.2",
		"@unocss/extractor-svelte": "^66.5.2",
		"@unocss/preset-tagify": "^66.5.2",
		"@unocss/transformer-directives": "^66.5.2",
		"@unocss/transformer-variant-group": "^66.5.2",
		"arktype": "^2.1.22",
		"d3-interpolate": "^3.0.1",
		"nprogress": "^0.2.0",
		"picocolors": "^1.1.1",
		"sharp": "^0.34.4",
		"surrealdb": "^1.3.2",
		"svelte": "^5.39.6",
		"sveltekit-superforms": "^2.27.1",
		"typescript": "^5.9.2",
		"unocss": "^66.5.2",
		"vite": "npm:rolldown-vite@7.1.11"
	},
	"trustedDependencies": [
		"@biomejs/biome",
		"@sveltejs/kit",
		"esbuild",
		"sharp"
	],
	"overrides": {
		"unconfig": "0.3.10"
	}
}
