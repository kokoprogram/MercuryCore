---
const colours = [
	"accent-low",
	"accent",
	"accent-high",
	"white",
	"gray-1",
	"gray-2",
	"gray-3",
	"gray-4",
	"gray-5",
	"gray-6",
	"gray-7",
	"black"
]
---

{
	colours.map(colour => (
		<div style={`background: var(--sl-color-${colour})`}>{colour}</div>
	))
}

<style>
	div {
		color: white;
		font-size: 1.5rem;
		padding: 1rem;
		border-radius: 0.5rem;	
	}
</style>
